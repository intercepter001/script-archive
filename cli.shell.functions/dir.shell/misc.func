alias psg='ps -efww | grep -i'

if [ -n "_IS_BASH" ]; then
   # ksh interpretes '.' as marker for discipline functions
   function ls_size { # user needs to add -d as required
      ls -1 -al ${1:+"$@"} | sort -nbk5
   }
fi

export EMVSHELL=/bin/bash
[ "$PERL5LIB" = "" -a "$PERLLIB" = "" ] && export PERL5LIB=~/.perl5lib 


