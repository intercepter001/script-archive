# translation functions
function xlate { # dict.leo.org E-D
    lynx -width=$COLUMNS -dump -nolist "HTTP://dict.leo.org/?lang=de&search="`perl -e 'print join "%20", grep {s/ /%20/g;$_} @ARGV;' "$@"` | \
   perl -e 'undef $/; $_=<>; s/\A[\s\S]*?Englisch\s*Deutsch//mgoi; s/^ {10,}//mgo; s/ +$//mgo; s/^ *(_____[\s\S]*|Werbung|LEO wird unterst.tzt durch|[ \t]+Hinweise[\s\-]+FAQ)[\s\S]*//mgoi; print'
}
